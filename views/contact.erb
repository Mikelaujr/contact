    display: inline;
    font-size: 32px;
}

header h1 a:link, header h1 a:visited {
    color: #444;
    text-decoration: none;
}

header h2 {
    font-size: 16px;
    font-style: italic;
    color: #999;
}

label {
    font-family: 'Open Sans';
    font-size: 18px;
    max-width: 650px;
    line-height: 32px;
}

label.last{
    line-height: 25px;
}

input{
    margin-top: 3px;

}
textarea{
    margin-top: 8px;
}

#main {
    margin: 0 0 20px;
}

#add {
    margin: 0 0 20px;
}

#add textarea {
    height: 30px;
